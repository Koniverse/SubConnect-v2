{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*"],

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationDir": "dist",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["./src/*", "./node_modules/*"],
      "@wagmi/core": ["./node_modules/@wagmi/core/dist"],
      "@wagmi/core/*": ["./node_modules/@wagmi/core/dist/*"]
    },
    "typeRoots": ["node_modules/@types"]
  }
}
